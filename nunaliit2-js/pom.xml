	<reporting>
		<plugins>
			<plugin>
				<groupId>com.phasebash.jsdoc</groupId>
				<artifactId>jsdoc3-maven-plugin</artifactId>
				<version>1.2.0</version>
				<configuration>
					<configFile>src/main/jsdoc/config.json</configFile>
					<recursive>true</recursive>
					<directoryRoots>
						<directoryRoot>.</directoryRoot>
					</directoryRoots>
				</configuration>
			</plugin>
		</plugins>
