			<plugin>
				<groupId>com.googlecode.jslint4java</groupId>
				<artifactId>jslint4java-maven-plugin</artifactId>
				<version>${jslint4java-maven-plugin.version}</version>
				<executions>
					<execution>
						<id>lint</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>lint</goal>
						</goals>
