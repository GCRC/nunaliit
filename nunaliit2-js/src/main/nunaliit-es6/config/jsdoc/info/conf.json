{
    "opts": {
        "recurse": true,
        "template": "config/jsdoc/info"
    },
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "includePattern": "\\.js$"
    },
    "plugins": [
        "jsdoc-plugin-typescript",
        "config/jsdoc/info/api-plugin",
        "config/jsdoc/info/define-plugin",
        "config/jsdoc/info/virtual-plugin"
    ],
    "typescript": {
      "moduleRoot": "src"
    }
}
