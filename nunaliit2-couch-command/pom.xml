<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>nunaliit2</artifactId>
        <groupId>ca.carleton.gcrc</groupId>
        <version>2.2.9-SNAPSHOT</version>
    </parent>
    <artifactId>nunaliit2-couch-command</artifactId>
    <name>nunaliit2-couch-command</name>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>${appassembler-maven-plugin.version}</version>
                <configuration>
                    <programs>
                        <program>
                            <mainClass>ca.carleton.gcrc.couch.command.Main</mainClass>
                            <id>nunaliit</id>
                        </program>
                        <program>
                            <mainClass>ca.carleton.gcrc.couch.command.dump.DumpMain</mainClass>
                            <id>couch-dump</id>
                        </program>
                        <program>
                            <mainClass>ca.carleton.gcrc.couch.command.dump.RestoreMain</mainClass>
                            <id>couch-restore</id>
                        </program>
                    </programs>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <!--  The following is an ANT target -->
                            <target>
                                <chmod file="./target/appassembler/bin/nunaliit" perm="a+x"/>
                                <chmod file="./target/appassembler/bin/couch-dump" perm="a+x"/>
                                <chmod file="./target/appassembler/bin/couch-restore" perm="a+x"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
